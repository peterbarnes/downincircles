<div class="container">
  <div class="col-md-8 col-md-offset-2">
    <h1 class="text-center"><a href="https://www.facebook.com/downincircles" class="soc-link" target="blank">Facebook</a></h1>
    <h1 class="text-center"><a href="https://downincircles.bandcamp.com" class="soc-link" target="blank">Bandcamp</a></h1>
    <h1 class="text-center"><a href="https://www.youtube.com/user/DownInCircles" class="soc-link" target="blank">Youtube</a></h1>
  </div>
  <div class="col-md-6 col-md-offset-3">
    <%= form_tag("/send", method: "post") do %>
      <div class="row">
        <div class="col-md-12 form-group">
          <%= label_tag(:name, "Name") %>
          <%= text_field_tag(:name, params[:name], class: "form-control") %>
        </div>
        <div class="col-md-12 form-group">
          <%= label_tag(:email, "Email") %>
          <%= text_field_tag(:email, params[:email], class: "form-control") %>
        </div>
        <div class="col-md-12 form-group">
          <%= label_tag(:body, "Message") %>
          <%= text_area_tag(:body, params[:body], class: "form-control", rows: "6") %>
        </div>
      </div>
      <div class="row">
        <div class="col-md-1">
          <button type="submit" 
                  class="btn btn-primary">
               <i class="fa fa-envelope-o"></i> 
              Send
          </button>
        </div>
      </div>
    <% end %>
  </div>
</div>